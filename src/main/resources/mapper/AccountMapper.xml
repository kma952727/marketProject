<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.AccountMapper">
	
	<select id="selectById" resultType="com.example.demo.model.Account">
		SELECT *
		FROM account
		WHERE account_id = #{id}
	</select>
	<select id="selectByName" resultType="com.example.demo.model.Account">
		SELECT account_id, name, password, mail
		FROM account
		WHERE name = #{name}
	</select>
	<insert id="insert">
		INSERT INTO account (name, password, mail)
		VALUES (#{name},#{password}, #{mail});
	</insert>
</mapper>